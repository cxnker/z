local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local HttpService = game:GetService("HttpService")
local TeleportService = game:GetService("TeleportService")
local TweenService = game:GetService("TweenService")
local Workspace = game:GetService("Workspace")
local StarterGui = game:GetService("StarterGui")
local TextChatService = game:GetService("TextChatService")

local LocalPlayer = Players.LocalPlayer
local PlayerGui = LocalPlayer:WaitForChild("PlayerGui")
local Humanoid = LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("Humanoid")
local NoclipActived = false

LocalPlayer.CharacterAdded:Connect(function(character)
    Humanoid = character:WaitForChild("Humanoid")
end)

local whitelistDev = {
    ["Deluxe_Studios"] = true,        -- Exemplo 2: Dev principal (Lyra Devs)
    ["Roun95"] = true,      -- Exemplo 3: Dev secundário (Lyra Devs)
}

if not whitelistDev[LocalPlayer.Name] then
    StarterGui:SetCore("SendNotification", {
        Title = "Acesso Negado - Dev Mode",
        Text = "Você não está na whitelist de devs do Lyra Devs! Contate o criador. (Exclusivo para usuários de Lyra Devs)",
        Duration = 5
    })
    return
end

-- Notificação de acesso Dev
StarterGui:SetCore("SendNotification", {
    Title = "Lyra Devs",
    Text = "Acesso Desenvolvedor liberado! Whitelist confirmada (exclusivo para Lyra Devs).",
    Duration = 4
})

-- Interface WindUI
local WindUI = loadstring(game:HttpGet("https://github.com/Footagesus/WindUI/releases/latest/download/main.lua"))()
local Window = WindUI:CreateWindow({
    Title = "Hexagon Hub",
    Icon = "rbxassetid://137031510785437",
    Author = "by Nova",
    Size = UDim2.fromOffset(600, 480),
    Transparent = true,
    Theme = "Midnight",
    Resizable = true,
})

local Section1 = Window:Section({Title = "Painel Desenvolvedor", Icon = "code", Opened = true})
local Tab1 = Section1:Tab({Title = "Funções Dev", Icon = "hammer", Locked = false})
local Section2 = Tab1:Section({Title = "Comandos via Chat (RBXGeneral)", Icon = "album", Opened = true})

local PlayersDD = Section2:Dropdown({
    Title = "Jogadores (SelectedPlayer)",
    Callback = function(option)
        SelectedPlayer = Players:FindFirstChild(option)
    end
})

Section2:Button({
    Title = "Title (SelectedPlayer)",
    Desc = "Desc (SelectedPlayer)",
    Locked = false,
    Callback = function()

    end
})

StarterGui:SetCore("SendNotification", {
    Title = "Lyra Devs",
    Text = "Carregado! Botões enviam comandos para o chat (RBXGeneral). Manual: ;cmd nomejogador OU ;cmd (usa SelectedPlayer). Control via joystick exclusivo para Lyra Devs!",
    Duration = 5

})

